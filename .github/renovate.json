{
  "extends": [
    "config:js-app",
    ":semanticCommits",
    ":semanticCommitScopeDisabled",
    ":automergeMinor"
  ],
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "packageRules": [
    {
      "matchPackagePatterns": ["^@react-md/"],
      "groupName": "react-md monorepo"
    },
    {
      "matchPackagePatterns": ["zwift-data"],
      "stabilityDays": 0
    }
  ],
  "postUpdateOptions": ["npmDedupe"],
  "ignoreDeps": [
    "react-leaflet",
    "@react-leaflet/core",
    "@sentry/node",
    "@sentry/tracing"
  ]
}
